function set_ftab () {
	# if fTAB is unset, assign default value
	export fTAB=${fTAB='   '}
}

function ctab() {
	# clear tab
	export TAB=''
}

function itab() {
	# increment tab
	set_ftab
	if [ $# -eq 0 ]; then
		N=1
	else
		N=$1
	fi
	for ((i=1;i<=$N;i++)); do
		# increment TAB by fTAB
		TAB+=${fTAB}
	done
	export TAB
}

function dtab() {
	# decrement tab
	set_ftab
	if [ $# -eq 0 ]; then
		N=1
	else
		N=$1
	fi
	for ((i=1;i<=$N;i++)); do
		# decrement TAB by fTAB
		TAB=${TAB%$fTAB}
	done
	export TAB
}

# set tab
if [ -z ${TAB+dummy} ]; then
	i=0
	decho -e "TAB ${yellow}unset${NORMAL}"
else
	i=${#TAB}
fi

export TAB=${TAB=''}
export fTAB=${fTAB:='   '}

j=${#TAB}
if [ $i -ne $j ]; then
	decho -e "${TAB}TAB = \E[106m${TAB}${NORMAL} length $j"
fi

#!/bin/bash -eu
# -----------------------------------------------------------------------------------------------
# SYSTEM-INDEPENDENT BASH ALIASES
# -----------------------------------------------------------------------------------------------
# ~/config/.bash_aliases
#
# Purpose: Define aliases and function for interactive UNIX-like shells.
#
# Usage: Intended to be used with WSL when vEthernet (WSL (Hyper-V firewall)) connections are
#   blocked by Cisco VPN
#
# Jul 2024 JCL
#
# -----------------------------------------------------------------------------------------------

# check if VB is unset or null
if [ -z ${VB:+dummy} ]; then
    export VB=false
else
    # check if VB is true
    if [ "${VB}" = true ]; then
        # load bash utilities
        fpretty=${HOME}/config/.bashrc_pretty
        if [ -e $fpretty ]; then
            source $fpretty
            print_ribbon
            if [[ "$-" == *i* ]]; then
                print_source
            fi
        fi
    fi
fi

# Aliases
itab
echo -en "${TAB}${MAGENTA}redefining aliases... ${RESET}"
alias git='powershell.exe git'
alias scp='powershell.exe scp'
alias ssh='powershell.exe ssh'
echo -e "done"
dtab

function unvpn() {
    echo -en "${TAB}${MAGENTA}removing aliases... ${RESET}"
    [ $DEBUG -gt 0 ] && echo
    local -i RETVAL
    itab
    for ali in git scp ssh; do
        decho -n "${TAB}$ali... "
        alias $ali &>/dev/null
        RETVAL=$?
        if [ $RETVAL -eq 0 ]; then
            decho "unaliasing"
            unalias $ali
        else
            decho "skip"
        fi

    done
    dtab
    echo -e "done"
}

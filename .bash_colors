# create rainbow-ordered (hue order) of 12 colors
dcolor=( '\E[38;5;131m' '\E[38;5;137m' '\E[38;5;143m' '\E[38;5;107m' '\E[38;5;71m'  '\E[38;5;72m'  '\E[38;5;73m'  '\E[38;5;67m'  '\E[38;5;61m'  '\E[38;5;97m'  '\E[38;5;133m' '\E[38;5;132m' )

# print dcolor array in rainbow-order
function print_colors() {    
    if [ $(echo $- | grep u) ]; then
        decho -n "u is set: "
        decho "$-"
    else
        decho -n "u is not set: "
        decho "$-"
        decho "setting u..."
        set -u
        decho "$-"
    fi
    
    # get length of array
    local -ir N_cols=${#dcolor[@]}
    echo "$N_cols in array ${!dcolor@}"
    for ((i=0;i<$N_cols;i++));do
        echo -e "${dcolor[$i]}$i"
    done
}

# print dcolor array in debug order
function print_dcolors() {
    # get length of array
    local -ir N_cols=${#dcolor[@]}
    echo "$N_cols in array ${!dcolor@}"
    # calculate maximum array index
    local -ir N_max=$((N_cols-1))
    echo "$N_max max index of array ${!dcolor@}"
    # set starting color (using array indices 0-11, specified above)
    local -ir start=7
    echo -e "staring with index ${dcolor[$start]}${start}\x1b[m"
    local indx
    local -ir direction=-1
    for ((i=0;i<$N_cols;i++));do
        #define array index
        indx=$(( (${N_max} - $i + $start + 1 ) % ${N_cols} ))
        printf '%2d ' $indx
        
        echo -e "${dcolor[$indx]}$i $indx"
        echo -en "\x1b[m"
    done    
}

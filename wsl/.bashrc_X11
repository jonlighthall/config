else
    DIR=/mnt/c/Program\ Files\ \(x86\)/Xming
    if [ -d "$DIR" ]; then
	if $VB; then
	    echo -e "${TAB}found $DIR"
	fi
	if [ -f "$DIR/$PROG" ]; then
	    if $VB; then
		echo -e "${TAB}Launching $PROG...\c"
	    fi
	    (xming)
	    if [[ $? == 0 ]]; then
		if $VB; then
		    echo -e "${GOOD}OK${NORMAL}"
		fi
		TAB=${TAB::-${#fTAB}}
		return 0   
	    else
		if $VB; then
		    echo -e "${BAD}FAIL${NORMAL}"
		    echo "${TAB}unaliasing $PROG..."
		fi
		unalias xming 2>/dev/null
	    fi
	else
	    if $VB; then
		echo -e "${TAB}$PROG ${BOLD}not found${NORMAL}"
		echo "${TAB}unaliasing $PROG..."
	    fi
	    unalias xming 2>/dev/null
	fi
    else
	if $VB; then
	    echo -e "${TAB}$DIR ${BOLD}not found${NORMAL}"
	    echo "${TAB}unaliasing $PROG..."
	fi
	unalias xming 2>/dev/null
    fi
fi
TAB=${TAB::-${#fTAB}}
